@model StudentManagementSystem.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h2>Delete Course</h2>
        </div>
        <div class="card-body text-center">
            <h4 class="text-danger">Are you sure you want to delete this course?</h4>
            <p class="text-muted">This action cannot be undone.</p>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="border p-3 rounded bg-light">
                        <dl class="row">
                            <dt class="col-sm-4">Course Name:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseName)</dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                            <dt class="col-sm-4">Credits:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Credits)</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteCourse" class="mt-4">
                <input type="hidden" asp-for="CourseId" />

                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash"></i> Delete
                </button>

                <a asp-action="GetAllCourses" class="btn btn-secondary btn-lg ms-3">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
