@{
    ViewData["Title"] = "Admin Dashboard";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row justify-content-center">
        <!-- Students Card -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Students</h3>
                    <p class="card-text">Manage student records.</p>
                    <div class="d-grid gap-2">
                        @* <a href="@Url.Action("AddStudent", "Student")" class="btn btn-success">Add Student</a> *@
                        <a href="@Url.Action("GetAllStudents", "Student")" class="btn btn-primary">View Students</a>
                        @* <a href="@Url.Action("UpdateStudent", "Student")" class="btn btn-warning">Update Student</a> *@
                        @* <a href="@Url.Action("DeleteStudent", "Student")" class="btn btn-danger">Delete Student</a> *@

                    </div>
                </div>
            </div>
        </div>

        <!-- Courses Card -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Courses</h3>
                    <p class="card-text">Manage courses and enrollments.</p>
                    <div class="d-grid gap-2">
                        @* <a href="/Courses/Create" class="btn btn-success">Add Course</a> *@
                        @* <a href="/Courses/Edit" class="btn btn-warning">Update Course</a> *@
                        @* <a href="/Courses/Delete" class="btn btn-danger">Delete Course</a> *@
                        <a href="@Url.Action("GetAllCourses", "Course")" class="btn btn-primary">View Courses</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enrollments Card -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Enrollments</h3>
                    <p class="card-text">View all students enrolled in courses.</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("GetEnrollments", "Enrollment")" class="btn btn-primary">View Students</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Optional, for interactive features) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
