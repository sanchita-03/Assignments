@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-trash"></i> Delete Student</h3>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">Are you sure you want to delete this student?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-bold">First Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-3 fw-bold">Last Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Date of Birth</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>
            </dl>

            <form asp-action="DeleteStudent">
                <input type="hidden" asp-for="StudentId" />

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="GetAllStudents" class="btn btn-secondary btn-lg ms-3">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
